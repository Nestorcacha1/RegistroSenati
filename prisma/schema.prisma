generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nombre    String
  apellido  String
  isAdmin   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Usuario{
  id        Int   @id @default(autoincrement())
  nombre    String
  apellido  String
  dni      String
  carrera   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Laptops   Laptop[]
  Objetos   Objeto[]
}

model Laptop {
  id          Int      @id @default(autoincrement())
  marca       String
  numeroSerie String   
  idUsuario   Int
  color       String
  Usuario     Usuario  @relation(fields: [idUsuario], references: [id], onDelete: Cascade)

}

model Objeto {
  id            Int      @id @default(autoincrement())
  idUsuario     Int
  nombre         String
  descripcion   String
  Usuario       Usuario  @relation(fields: [idUsuario], references: [id], onDelete: Cascade)
}
